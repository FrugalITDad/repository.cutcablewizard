<addon id="plugin.program.cutcablewizard"
       name="CutCableWizard"
       version="1.6.7"
       provider-name="FrugalITDad">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
    </requires>
    
    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>executable</provides>
    </extension>

    <extension point="xbmc.service" 
               library="service.py" 
               start="startup" />

    <extension point="xbmc.addon.metadata">
        <summary lang="en_US">CordCutter builds wizard</summary>
        <description lang="en_US">
            Installs and manages CordCutter builds:
            cordcutter_base, cordcutter_pro, cordcutter_plus,
            cordcutter_basegaming, cordcutter_progaming,
            cordcutter_plusgaming, cordcutter_admin.
        </description>
        <platform>all</platform>
        <language>en_US</language>
    </extension>
</addon>