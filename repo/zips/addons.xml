<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
    <!-- Repository add-on itself -->
    <addon id="repository.cutcablewizard" 
           name="CutCableWizard Repository" 
           version="1.0.0" 
           provider-name="FrugalITDad">
        <extension point="xbmc.addon.repository" name="CutCableWizard Repository">
            <dir>
                <info>https://raw.githubusercontent.com/FrugalITDad/repository.cutcablewizard/main/repo/zips/addons.xml</info>
                <checksum>https://raw.githubusercontent.com/FrugalITDad/repository.cutcablewizard/main/repo/zips/addons.xml.md5</checksum>
                <datadir zip="true">https://raw.githubusercontent.com/FrugalITDad/repository.cutcablewizard/main/repo/zips/</datadir>
            </dir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en_US">Repository for CutCableWizard and CordCutter builds</summary>
            <description lang="en_US">Hosts the CutCableWizard installer and related CordCutter builds.</description>
            <platform>all</platform>
            <language>en_US</language>
        </extension>
    </addon>

    <!-- Wizard add-on -->
    <addon id="plugin.program.cutcablewizard" 
           name="CutCableWizard" 
           version="1.3.6" 
           provider-name="FrugalITDad">
        <requires>
            <import addon="xbmc.python" version="3.0.0"/>
        </requires>
        <extension point="xbmc.python.pluginsource" library="default.py">
            <provides>executable</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en_US">CordCutter builds wizard</summary>
            <description lang="en_US">Installs and manages CordCutter builds: cordcutter_base, cordcutter_pro, cordcutter_plus, cordcutter_basegaming, cordcutter_progaming, cordcutter_plusgaming, cordcutter_admin.</description>
            <platform>all</platform>
            <language>en_US</language>
        </extension>
    </addon>
</addons>
